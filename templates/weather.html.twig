{% extends 'base.html.twig' %}

{% block title %}Hello WeatherController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h3>Temperature for provided Location</h3>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Location</th>
            <th scope="col">Temperature1</th>
            <th scope="col">Temperature2</th>
            <th scope="col">Average temp</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>{{ location.locality }}</td>
            <td>{{ weather.temperature1 }}</td>
            <td>{{ weather.temperature2 }}</td>
            <td>{{ weather.avgTemperature }}</td>
        </tr>
        </tbody>
    </table>
</div>
{% endblock %}
